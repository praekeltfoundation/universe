{
  "$schema": "http://json-schema.org/schema#",
  "properties": {
    "mc2": {
      "properties": {
        "cpus": {
          "default": 0.5,
          "description": "CPU shares to allocate to each mc2 instance.",
          "minimum": 0.1,
          "type": "number"
        },
        "haproxy-group": {
          "default": "external",
          "description": "HAProxy group parameter. Matches with HAPROXY_GROUP in the app labels.",
          "type": "string"
        },
        "instances": {
          "default": 1,
          "description": "Number of instances to run.",
          "minimum": 1,
          "type": "integer"
        },
        "mem": {
          "default": 256.0,
          "description": "Memory (MB) to allocate to each mc2 task.",
          "minimum": 128.0,
          "type": "number"
        },
        "minimumHealthCapacity": {
          "default": 0.5,
          "description": "Minimum health capacity.",
          "minimum": 0,
          "type": "number"
        },
        "maximumOverCapacity": {
          "default": 0.2,
          "description": "Maximum over capacity.",
          "minimum": 0,
          "type": "number"
        },
        "name": {
          "default": "mc2",
          "description": "Name for this mc2 instance",
          "type": "string"
        },
        "role": {
          "default": "*",
          "description": "Deploy mc2 only on nodes with this role.",
          "type": "string"
        },
        "marathon-uri": {
          "default": "http://master.mesos:8080",
          "description": "URI of Marathon instance",
          "type": "string"
        },
        "hub-domain": {
          "default": "192.168.55.20.xip.io",
          "description": "Domain suffix for default app domains",
          "type": "string"
        }
      },
      "required": [
        "cpus",
        "mem",
        "haproxy-group",
        "instances",
        "name",
        "minimumHealthCapacity",
        "maximumOverCapacity",
        "marathon-uri",
        "hub-domain"
      ],
      "type": "object"
    }
  },
  "type": "object"
}
